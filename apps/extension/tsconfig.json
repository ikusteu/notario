{
	"compilerOptions": {
		"target": "es2022",
		"module": "esnext",
		"lib": ["dom", "esnext"],
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"resolveJsonModule": true
	},
	"exclude": ["node_modules"]
}
